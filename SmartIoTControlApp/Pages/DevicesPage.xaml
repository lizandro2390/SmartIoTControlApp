<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartIoTControlApp.Pages.DevicesPage"
             Title="Mis Dispositivos"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Padding="15" Spacing="15">

        <Label Text="Dispositivos Registrados"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="{DynamicResource PrimaryTextColor}" />

        <!-- Lista de tarjetas -->
        <CollectionView x:Name="DevicesCollectionView"
                        ItemsSource="{Binding Devices}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="16"
                           Padding="15"
                           Margin="0,0,0,10"
                           BackgroundColor="{DynamicResource SecondaryColor}"
                           HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*,Auto"
                              RowDefinitions="Auto,Auto">

                            <!-- Icono de tipo de dispositivo -->
                            <Image Grid.RowSpan="2"
                                   Source="{Binding Icon}"
                                   WidthRequest="48"
                                   HeightRequest="48"
                                   Margin="0,0,10,0" />

                            <!-- Nombre -->
                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource PrimaryTextColor}" />

                            <!-- Estado visual -->
                            <Label Grid.Column="2"
                                   Text="{Binding StatusText}"
                                   FontSize="14"
                                   TextColor="{Binding StatusColor}"
                                   HorizontalOptions="End" />

                            <!-- IP o ID -->
                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding IP}"
                                   FontSize="14"
                                   TextColor="{DynamicResource SecondaryTextColor}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BotÃ³n para agregar nuevo dispositivo -->
        <Button Text="Agregar nuevo dispositivo"
                FontSize="16"
                HeightRequest="50"
                BackgroundColor="{DynamicResource PrimaryColor}"
                TextColor="White"
                CornerRadius="10"
                Clicked="OnAddDeviceClicked" />

    </VerticalStackLayout>
</ContentPage>
