<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartIoTControlApp.Pages.AddDevicePage"
             Title="Agregar Dispositivo"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Etiqueta del campo -->
            <Label Text="Nombre del dispositivo"
                   FontSize="16"
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <!-- Campo de entrada con etiqueta encima tipo placeholder -->
            <Grid>
                <!-- Etiqueta estilo placeholder -->
                <Label x:Name="PlaceholderLabel"
                       Text="Ej. Luz Cocina"
                       TextColor="Gray"
                       FontSize="14"
                       Margin="10,6,0,0"
                       VerticalOptions="Start"
                       HorizontalOptions="Start">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding Source={x:Reference NameEntry}, Path=Text.Length}"
                                     Value="0">
                            <Setter Property="IsVisible" Value="True" />
                        </DataTrigger>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding Source={x:Reference NameEntry}, Path=Text.Length}"
                                     Value="1">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding Source={x:Reference NameEntry}, Path=Text.Length}"
                                     Value="2">
                            <Setter Property="IsVisible" Value="False" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>

                <!-- Entry para nombre -->
                <Entry x:Name="NameEntry"
                       FontSize="16"
                       BackgroundColor="{DynamicResource SecondaryColor}"
                       TextColor="Black"
                       Placeholder=" " />
                <!-- placeholder vacío para que no interfiera -->
            </Grid>

            <!-- Campo Picker -->
            <Label Text="Tipo de dispositivo"
                   FontSize="16"
                   TextColor="{DynamicResource PrimaryTextColor}" />

            <Picker x:Name="TypePicker"
                    BackgroundColor="{DynamicResource SecondaryColor}"
                    Title="Selecciona una opción"
                    TitleColor="Gray"
                    TextColor="Black">
                <Picker.Items>
                    <x:String>Bombillo</x:String>
                    <x:String>Ventilador</x:String>
                    <x:String>Sensor</x:String>
                </Picker.Items>
            </Picker>

            <!-- Texto de ayuda -->
            <Label Text="Selecciona el tipo que deseas agregar"
                   FontSize="14"
                   TextColor="Black"
                   FontAttributes="Italic"
                   Margin="0,0,0,10" />

            <Button Text="Guardar"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnSaveClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
